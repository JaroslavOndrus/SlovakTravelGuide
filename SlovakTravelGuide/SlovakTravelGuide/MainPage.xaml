<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SlovakTravelGuide.MainPage"
             BackgroundColor="White">

    <StackLayout>
        
        <Label 
            Text="SLOVAK TRAVEL"
            FontSize="48"
            FontAttributes="Bold"
            VerticalOptions="Start" 
            HorizontalOptions="Center" 
            TextColor="Green"
            Margin="0, 10, 0, 0"/>

        <Label
            Text="GUIDE"
            TextColor="Green"
            FontSize="48"
            HorizontalOptions="Center"
            FontAttributes="Bold"/>

        <Button
            Text="TRAVEL"
            TextColor="Green"
            FontAttributes="Bold"
            FontSize="50"
            VerticalOptions="Start"
            HorizontalOptions="FillAndExpand"
            Margin="20, 405, 20, 0"
            HeightRequest="100"
            BackgroundColor="LightGray"/>

        <Button
            Text="OPTIONS"
            FontSize="50"
            TextColor="Green"
            FontAttributes="Bold"
            VerticalOptions="End"
            HorizontalOptions="FillAndExpand"
            Margin="20, 5, 20, 0"
            HeightRequest="100"
            BackgroundColor="LightGray"/>

    </StackLayout>

</ContentPage>
